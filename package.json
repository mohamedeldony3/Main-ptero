{
  "name": "remote-script-runner",
  "version": "1.0.0",
  "description": "Download or print a remote script using credentials from environment variables (Render-compatible).",
  "type": "module",
  "main": "run.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node -r dotenv/config run.js",
    "print": "node -r dotenv/config run.js --print",
    "curl-bin": "node -r dotenv/config run.js --curl-bin"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "license": "MIT"
}